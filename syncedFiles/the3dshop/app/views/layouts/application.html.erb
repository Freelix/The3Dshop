<!DOCTYPE html>
<html>
<head>
  <title>The3dshop</title>

  <!-- Stripe -->
  <%= javascript_include_tag "https://js.stripe.com/v1/", "application" %>

  <!-- Default settings -->
  <%= csrf_meta_tags %>

  <!-- Custom files -->
  <%= stylesheet_link_tag "style" %>

  <!-- Bootstrap -->
  <% if request.ssl? %>
    <%= stylesheet_link_tag 'https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css' %>
    <%= javascript_include_tag 'https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js' %>
  <% else %> 
    <%= stylesheet_link_tag 'http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css' %>
    <%= javascript_include_tag 'http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js' %>
  <% end %>

</head>
<body>
	<nav class="navbar navbar-inverse navbar-fixed-top">
	    <div class="container">
	        <div class="navbar-header">
	            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
	                <span class="sr-only">Toggle navigation</span>
	                <span class="icon-bar"></span>
	                <span class="icon-bar"></span>
	            </button>
	            <%= link_to image_tag("logo.png", alt: "Example Image", class: "mainLogo"), items_path %>
	            <%= link_to "The3Dshop", items_path, class: "mainLogoText" %>
	        </div>

	        <div id="navbar" class="collapse navbar-collapse text">
	            <ul class="nav navbar-nav navbar-right">
	                <% if user_signed_in? %>
	                <li>
	                	<%= link_to "Home", current_user %>
	                </li>
					<li>
					    <%= link_to "Sign Out", destroy_user_session_path, :method => :delete %>
					</li>
					<li class="cart-text">
						<%= render 'layouts/cart_text' %>
					</li>
					<% else %>
                    <li>
					    <%= link_to "Sign in", new_user_session_path  %>
					</li>
					<li>
					    <%= link_to "Sign Up", new_user_registration_path %>
					</li>
					<% end %>
	            </ul>
	        </div>
	    </div>
    </nav>

    <div class="mainContent">
	    <%= yield %>
    </div>

    <div class="footer">

</body>
</html>
