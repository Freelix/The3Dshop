<% content_for :title do %>
  <title>Forgot your password - The3DShop</title>
<% end %>

<div class="container">
    <h2 class="form-signin-heading">Forgot your password?</h2>
    
	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

	  <div class="field">
	    <%= f.label :email %><br />
	    <%= f.email_field :email, autofocus: true, :class => "form-control" %>
	  </div>

	  <div class="actions">
	    <%= f.submit "Send me reset password instructions", :class => "btn btn-lg btn-primary btn-block" %>
	  </div>
    <% end %>

    <%= devise_error_messages! %>
    <%= render 'layouts/showErrors' %>
</div>