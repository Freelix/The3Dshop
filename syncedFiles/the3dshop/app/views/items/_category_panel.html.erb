<a id="simple-menu" class="btn btn-primary showCategories" href="#">Show categories</a>

<div id="sidr">
  <ul>
	    <% @categories.each do |category| %>
	       
	       <li><%= link_to items_path(:search_by_category => category.id), method: :get, remote: true, class: 'category_form' do %>
	       	<%= category.name %>
	       	<% end %>
	       </li>
      <% end %>
    <li>
    <a id="simple-menu-close" class="btn btn-primary closeCategories" href="#">Close panel</a>
	</li>
  </ul>
</div>